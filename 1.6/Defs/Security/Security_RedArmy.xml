<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="BaseSovietArtillery" ParentName="BuildingBase" Abstract="True">
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/RedArmy/Artillery/zis2base</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <rect>(0.38,0.2,0.56375,0.8)</rect>
        <cornerTL>Damage/Corner</cornerTL>
      </damageData>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <stealable>false</stealable>
    <size>(2,2)</size>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>false</castEdgeShadows>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <tickerType>Normal</tickerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li Class="CompProperties_Mannable">
        <manWorkType>Violent</manWorkType>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToMake>2700</WorkToMake>
      <Beauty>-15</Beauty>
      <Mass>50</Mass>
    </statBases>
    <building>
      <turretBurstWarmupTime>4.0</turretBurstWarmupTime>
      <turretBurstCooldownTime>14.0</turretBurstCooldownTime>
      <buildingTags>
        <li>Artillery</li>
      </buildingTags>
    </building>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>SovietMidWarTech</li>
    </researchPrerequisites>
  </ThingDef>
  <ThingDef ParentName="BaseSovietArtillery">
    <defName>Turret_Zis</defName>
    <label>ZIS 2</label>
    <description>ZIS 2, designed to fire both HE and AP shells against soft and hard targets.</description>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
      </li>
    </comps>
    <uiIconPath>Things/RedArmy/Artillery/zis2_ui</uiIconPath>
    <costStuffCount>100</costStuffCount>
    <designationCategory>Security</designationCategory>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <costList>
      <Steel>250</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <designationHotKey>Misc3</designationHotKey>
    <building>
      <turretGunDef>Artillery_zis</turretGunDef>
      <buildingTags>
        <li>Artillery_BaseDestroyer</li>
      </buildingTags>
    </building>
    <graphicData>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_ShowTurretRadius</li>
    </placeWorkers>
  </ThingDef>
  <ThingDef ParentName="BaseArtilleryWeapon">
    <defName>Artillery_zis</defName>
    <label>ZIS 2 cannon</label>
    <description>A ZIS 2 cannon, designed to fire HE and AP shells against soft and hard targets.</description>
    <graphicData>
      <texPath>Things/RedArmy/Artillery/zis2</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <weaponTags>
      <li>Artillery_BaseDestroyer</li>
    </weaponTags>
    <statBases>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.55</AccuracyLong>
      <RangedWeapon_Cooldown>9</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Zis</defaultProjectile>
        <forcedMissRadius>3</forcedMissRadius>
        <warmupTime>10</warmupTime>
        <minRange>20</minRange>
        <range>75</range>
        <soundCast>Zis_Fire1</soundCast>
        <muzzleFlashScale>30</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Zis</defName>
    <label>Explosive Zis shot</label>
    <graphicData>
      <texPath>Things/Projectiles/ZisBullet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <damageAmountBase>45</damageAmountBase>
      <speed>75</speed>
      <explosionRadius>2.5</explosionRadius>
      <flyOverhead>true</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>
