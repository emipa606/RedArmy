<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- RED ARMY CONSCRIPT -->
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_RAInfantry</defName>
    <label>Red Army Tunic</label>
    <description>Standard uniform for Soviet infantry. Thick cloth affords a fair level of comfort, as well as padding against blunt objects. Otherwise, this is nothing more than cloth, and affords little protection against bullets, artillery, or any other sharp instruments.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>SovietEarlyWarTech</researchPrerequisite>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Things/RedArmy/Uniforms/Conscript/RAInfantryUniform</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>8000</WorkToMake>
      <MaxHitPoints>160</MaxHitPoints>
      <MarketValue>450</MarketValue>
      <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.12</ArmorRating_Sharp>
      <Insulation_Cold>20</Insulation_Cold>
      <Insulation_Heat>10</Insulation_Heat>
      <Mass>4</Mass>
    </statBases>
    <costList>
      <Cloth>75</Cloth>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <layers>
        <li>OnSkin</li>
      </layers>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/RedArmy/Uniforms/Conscript/RAInfantryUniform</wornGraphicPath>
      <tags>
        <li>SovietInfantryApparel</li>
      </tags>
    </apparel>
  </ThingDef>
